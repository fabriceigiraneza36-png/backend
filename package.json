{
  "name": "travel-backend",
  "version": "1.0.0",
  "description": "Travel app backend - Node.js + PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node scripts/migrate.js",
    "rollback": "node scripts/rollback.js",
    "seed": "node scripts/seed.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "db:init": "node -e \"require('./config/db').initDB()\"",
    "db:seed": "node -e \"require('./config/db').seedDB()\"",
    "db:reset": "node -e \"require('./config/db').resetDB()\"",
    "setup-db": "node scripts/setup-database.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.9.0",
    "compression": "^1.8.1",
    "cors": "^2.8.6",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "express-rate-limit": "^7.4.0",
    "express-validator": "^7.2.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^8.0.1",
    "pg": "^8.18.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sharp": "^0.33.5",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "yamljs": "^0.3.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "nodemon": "^3.1.7"
  }
}
